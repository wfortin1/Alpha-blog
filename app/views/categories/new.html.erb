<h1 class="text-center mt-4 mb-4">Create a new category!</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label mb-3 text-light" %>
          <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "col-2 col-form-label btn btn-outline-light btn-lg mt-3" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "center" %>
    </div>
  </div>
</div>
